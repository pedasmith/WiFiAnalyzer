<UserControl
    x:Class="WiFiRadarControl.WiFiStrengthControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WiFiRadarControl"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" MinWidth="50" />
            <ColumnDefinition Width="auto" MinWidth="200" />
            <ColumnDefinition Width="*"  />
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="0" x:Name="uiChannelName" Text="11" TextAlignment="Right" />
        <StackPanel Grid.Column="1" x:Name="uiStrength" Orientation="Horizontal" Margin="20,0,0,0" />
        <TextBlock Grid.Column="2" x:Name="uiText" Text="SSID=" Margin="20,0,0,0" />
    </Grid>
</UserControl>
